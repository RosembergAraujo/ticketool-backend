datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @unique @default(uuid())
  email      String   @unique
  password   String
  name       String
  cpf_cnpj   String
  role       Role     @default(USER)
  events     Event[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model Event {
  id             String        @id @unique @default(uuid())
  tittle         String
  description    String
  user           User          @relation(fields: [userId], references: [id])
  userId         String
  event_category EventCategory
  starts_at      DateTime
  expires_at     DateTime
  created_at     DateTime      @default(now())
  updated_at     DateTime      @default(now()) @updatedAt
}

enum EventCategory {
  OUTRO
  SHOW
  CASAMENTO
  ANIVERSARIO
  FESTA
  CONGRESSO
  CONFERENCIA
  CONVENCAO
  ENCONTRO
  FEIRA
  FESTIVAL
  LANCAMENTO
  REUNIAO
  SEMINARIO
  WORKSHOP
  CONCURSO
}

enum Role {
  ADMIN
  MANAGER
  USER
}
